/* Portrait tablet to landscape phone (Collapsed NAV) */
@media (max-width: 979px)

	.collapse.nav-collapse ul li:last-child a
		border: none
		text-transform: none
		font-size: inherit
		padding-left: 0px
 
/* Landscape phone to portrait tablet */
@media (max-width: 767px)

	html body
		padding: 0px

		.navbar-fixed-top, .navbar-fixed-bottom, .navbar-static-top
			margin: 0px

	.rightside
		display: none
	.leftside
		 width: 100%
	.iphone
		display: none

	.content-wrapper
		margin: 0px 20px 0px 20px

	.tagline
		font-size: 14px

 
/* Landscape phones and down */
@media (max-width: 480px)

	.tagline
		display: none


