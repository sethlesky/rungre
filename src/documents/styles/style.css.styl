/* Portrait tablet to landscape phone (Collapsed NAV) */
@media (max-width: 979px)

	.collapse.nav-collapse ul li:last-child a
		border: none
		text-transform: none
		font-size: inherit
		padding-left: 0px

	.drquote
		margin-top: 20px

 
/* Landscape phone to portrait tablet */
@media (max-width: 767px)

	html body
		padding: 0px

		.navbar-fixed-top, .navbar-fixed-bottom, .navbar-static-top
			margin: 0px

	.rightside
		display: none
	.leftside
		 width: 100%
	.iphone
		display: none

	.content-wrapper
		margin: 0px 20px 0px 20px

	.tagline
		font-size: 14px

	.features .span3
		margin-bottom: 30px

/* Landscape phones and down */
@media (max-width: 480px)

	.navbar.navbar-fixed-top .brand
		background: url('../images/slogo.png') no-repeat center
		width: 55px
		height: 22px
		margin: 0

	.hero-unit
		height: 238px
		background-position: 20%
		h1
			padding: 0px
			margin-top: 40px
			font-size: 38px
		.leftside
			height: 238px

	.btn-custom
		margin-top: 40px

	.tagline
		// display: none
		position: absolute
		top: 30px
		color: white
		text-shadow: none

	.navbar.navbar-fixed-top .btn-navbar
		margin-top: 0px

	#content
		padding-top: 0px



