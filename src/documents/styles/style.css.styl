
body
  padding-top 83px

// Navbar 
.navbar
	.navbar-inner .nav
		padding-top 21px
		font-size: 18px

.tagline
	margin-top: 31px
	text-shadow: 0 1px 0 white;
	color: #777;
	font-size: 18px
	

.brand
	background url('../images/logo.png') no-repeat 0px
	width: 104px
	height: 62px

// Get it
ul li:last-child
	padding-left: 15px
.navbar .nav > li:last-child > a
	padding: 10px
	border: 1px solid #999
	border-radius: 5px
	text-transform: uppercase
	font-size: 14px


// banner
.hero-unit
	height: 379px
	padding: 0px
	-webkit-border-radius: 0px
	border-radius: 0px
	color: white
	background-image: url('../images/bookbg.jpg');

.iphone-container
	text-align: center
.iphone
	position: relative
	top: -70px


// Setup media queries here from deocpad authors website
.navbar.navbar-fixed-top
	margin-bottom: 0px

.drquote
	padding: 10px
	background-color: #eee
	padding: 20px
	margin-bottom: 20px
	text-align: center
	font-size: 22px
	font-style: italic
	p
		font-size: 14px

.leftside
	float: left
	width: 50%
	height: 379px
	text-align: center
	h1
		padding 25px
		line-height: 1.2em
		margin-top: 100px
		font-size: 310%
		text-align: center
		font-size: 46px
		padding-top: 0px

// fade in and out
.quotes
	display: none
	width: 180px
	border-bottom: 2px solid white;

.rightside
	float: right
	width: 50%
	height: 379px
	background-image: url('../images/runner.jpg');

.navbar .btn-navbar
	padding: 13px 19px
	margin-top: 20px


.btn-custom
	background-color: hsl(93, 74%, 33%) !important;
	background-repeat: repeat-x;
	background-image: -khtml-gradient(linear, left top, left bottom, from(#8ee349), to(#4d9215));
	background-image: -moz-linear-gradient(top, #8ee349, #4d9215);
	background-image: -ms-linear-gradient(top, #8ee349, #4d9215);
	background-image: -webkit-gradient(linear, left top, left bottom, color-stop(0%, #8ee349), color-stop(100%, #4d9215));
	background-image: -webkit-linear-gradient(top, #8ee349, #4d9215);
	background-image: -o-linear-gradient(top, #8ee349, #4d9215);
	background-image: linear-gradient(#8ee349, #4d9215);
	border-color: #4d9215 #4d9215 hsl(93, 74%, 26.5%);
	color: #fff !important;
	text-shadow: 0 -1px 0 rgba(0, 0, 0, 0.42);
	-webkit-font-smoothing: antialiased;
	font-size: 26px
	font-weight: bold
	padding-right: 78px
	padding-left: 10px
	text-shadow: 1px 1px rgba(75, 68, 68, 0.48)
	position: relative;


.price
	background-image: url('../images/arrow.png');
	width: 85px;
	height: 28px;
	font-size: 14px;
	position: absolute;
	top: 8px
	left: 145px
	line-height: 1.8em

